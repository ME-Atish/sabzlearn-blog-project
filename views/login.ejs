<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <style>
    /* Reset & Base Styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #4facfe, #00f2fe);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    /* Form Container */
    form {
      background: white;
      padding: 20px 25px;
      border-radius: 10px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
      width: 100%;
      max-width: 350px;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    /* Input Styles */
    input[type="text"],
    input[type="password"] {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 14px;
      transition: 0.2s;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
      border-color: #4facfe;
      outline: none;
      box-shadow: 0 0 5px rgba(79, 172, 254, 0.5);
    }

    /* Submit Button */
    input[type="submit"] {
      background: linear-gradient(90deg, #4facfe, #00f2fe);
      color: white;
      font-weight: bold;
      padding: 10px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: 0.2s;
    }

    input[type="submit"]:hover {
      opacity: 0.9;
    }

    /* Captcha Box */
    .captcha {
      background: #f1f1f1;
      border: 1px dashed #bbb;
      border-radius: 6px;
      padding: 8px;
      text-align: center;
      font-size: 16px;
      font-weight: bold;
      letter-spacing: 2px;
      user-select: none;
    }

    /* Special classes */
    .username {
      background: #fff;
    }

    .password {
      background: #fff;
    }
  </style>

  <body>
    <form action="/auth/login" , method="post">
      <input
        type="text"
        name="username"
        class="username"
        ,
        placeholder="Enter username"
      />
      <input
        type="password"
        name="password"
        class="password"
        placeholder="Enter password"
      />
      <input
        type="password"
        name="confirmPassword"
        placeholder="Enter confirm password"
      />
      <input type="text" name="captcha" placeholder="Enter captcha" />
      <div class="captcha"></div>
      <input type="hidden" name="uuid" class="uuid" />
      <input type="submit" value="Login" />
    </form>
    <script>
      (async function () {
        const captcha = document.querySelector(".captcha");
        const uuid = document.querySelector(".uuid");

        const res = await fetch("/captcha");
        const response = await res.json();

        console.log(response);

        uuid.value = response.uuid;
        captcha.innerHTML = response.captcha;
      })();
    </script>
  </body>
</html>
