<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    :root {
      --bg: #f5f7fb;
      --card: #ffffff;
      --accent: #2563eb;
      --accent-600: #174ab6;
      --muted: #6b7280;
      --danger: #ef4444;
      --radius: 10px;
      --shadow: 0 6px 18px rgba(16, 24, 40, 0.08);
      --glass: rgba(255, 255, 255, 0.6);
      --max-w: 420px;
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto,
        "Helvetica Neue", Arial;
    }

    html,
    body {
      height: 100%;
      margin: 0;
      background: linear-gradient(180deg, #eef2ff 0%, var(--bg) 100%);
      color: #0f172a;
    }

    /* Centering layout */
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 32px 16px;
    }

    form {
      width: 100%;
      max-width: var(--max-w);
      background: var(--card);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 28px 22px;
      box-sizing: border-box;
      border: 1px solid rgba(15, 23, 42, 0.04);
    }

    form input[type="text"],
    form input[type="password"] {
      width: 100%;
      display: block;
      box-sizing: border-box;
      padding: 12px 14px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid rgba(15, 23, 42, 0.08);
      background: linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.6),
        rgba(255, 255, 255, 0.6)
      );
      font-size: 15px;
      outline: none;
      transition: box-shadow 0.12s ease, border-color 0.12s ease,
        transform 0.06s ease;
    }

    form input[type="text"]::placeholder,
    form input[type="password"]::placeholder {
      color: var(--muted);
      opacity: 0.9;
    }

    form input[type="text"]:focus,
    form input[type="password"]:focus {
      border-color: var(--accent);
      box-shadow: 0 6px 18px rgba(37, 99, 235, 0.08);
      transform: translateY(-1px);
    }

    /* specific classes keep their names */
    .username {
      /* optional additional tuning for username */
    }
    .password {
      /* optional additional tuning for password */
    }

    /* captcha container */
    .captcha {
      min-height: 54px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 10px;
      margin: 10px 0 16px;
      width: 100%;
      border-radius: 8px;
      background: linear-gradient(
        90deg,
        rgba(249, 250, 251, 1),
        rgba(255, 255, 255, 0.9)
      );
      border: 1px dashed rgba(15, 23, 42, 0.06);
      color: #0b1220;
      font-weight: 600;
      box-sizing: border-box;
      word-break: break-word;
    }

    /* hidden uuid input should remain hidden visually */
    input.uuid {
      display: none;
    }

    /* submit button */
    form input[type="submit"] {
      width: 100%;
      display: block;
      margin-top: 6px;
      padding: 12px 14px;
      border-radius: 8px;
      border: none;
      background: var(--accent);
      color: #fff;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: background-color 0.12s ease, transform 0.06s ease;
    }

    form input[type="submit"]:hover {
      background: var(--accent-600);
      transform: translateY(-1px);
    }

    /* small screens tweak */
    @media (max-width: 420px) {
      form {
        padding: 20px 16px;
        border-radius: 12px;
      }
      .captcha {
        padding: 8px;
        min-height: 48px;
      }
    }

    /* optional accessibility/focus style */
    input:focus {
      outline: 3px solid rgba(37, 99, 235, 0.1);
    }

    /* error appearance (if you want to show errors later) */
    .error {
      color: var(--danger);
      font-size: 13px;
      margin-top: 6px;
    }
  </style>

  <body>
    <form action="/auth/login" , method="post">
      <input
        type="text"
        name="username"
        class="username"
        ,
        placeholder="Enter username"
      />
      <input
        type="password"
        name="password"
        class="password"
        placeholder="Enter password"
      />
      <input
        type="password"
        name="confirmPassword"
        placeholder="enter confirm password"
      />
      <input type="text" name="captcha" placeholder="Enter captcha" />
      <div class="captcha"></div>
      <input type="hidden" name="uuid" class="uuid" />
      <input type="submit" value="Login" />
    </form>
    <script>
      (async function () {
        const captcha = document.querySelector(".captcha");
        const uuid = document.querySelector(".uuid");

        const res = await fetch("/captcha");
        const response = await res.json();

        console.log(response);

        uuid.value = response.uuid;
        captcha.innerHTML = response.captcha;
      })();
    </script>
  </body>
</html>
